<div class="row mt-4">
  <div class="d-index-pagination col-md-6">
    <%== pagy_bootstrap_nav(@pagy, anchor_string: 'data-turbo-frame="books_index"') %>
  </div>

  <div class="d-index-view-switch col-md-6">
    <div class="btn-group">
      <%= link_to "Table", url_for(books_index_view: 'table'),
          class: "btn #{current_index_view == 'table' ? 'btn-secondary' : 'btn-outline-secondary'}",
          data: { turbo_frame: "books_index" } %>
      <%= link_to "Covers", url_for(books_index_view: 'covers'),
          class: "btn #{current_index_view == 'covers' ? 'btn-secondary' : 'btn-outline-secondary'}",
          data: { turbo_frame: "books_index" } %>
    </div>
  </div>
</div>
